<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="answer" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/texView_background</item>
        <item name="android:layout_marginLeft">@dimen/answer_margin</item>
        <item name="android:layout_marginRight">@dimen/answer_margin</item>
        <item name="android:textSize">@dimen/default_textSize</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:paddingLeft">@dimen/spacing_normal</item>
    </style>

    <style name="question" parent="Theme.AppCompat.Light">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">48dp</item>
        <item name="android:background">@color/texView_background</item>
        <item name="android:textSize">@dimen/default_textSize</item>
        <item name="android:padding">4dp</item>
        <item name="android:paddingLeft">@dimen/spacing_normal</item>
        <item name="android:layout_height">@dimen/question_height</item>
    </style>

    <style name="checkbox" parent="Theme.AppCompat.Light">
        <item name="android:layout_height">@dimen/spacing_normal</item>
        <item name="android:layout_width">@dimen/spacing_double</item>
        <item name="android:background">@color/texView_background</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal</item>
    </style>

    <style name="answer_radio" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/texView_background</item>
        <item name="android:layout_marginLeft">@dimen/radio_margin</item>
        <item name="android:layout_marginRight">@dimen/answer_margin</item>
        <item name="android:textSize">@dimen/small_textSize</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:paddingLeft">@dimen/spacing_normal</item>
    </style>

</resources>
